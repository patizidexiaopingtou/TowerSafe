import("//build/test.gni")
import("../../time.gni")

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "${api_path}/include",
    "//foundation/arkui/napi/interfaces/kits/napi",
    "//third_party/json/include",
    "${time_service_path}/time/test/unittest/include",
    "${time_utils_path}/native/include",
    "${time_service_path}/time/include",
  ]
}

module_output_path = "time_service/time_dfx"

ohos_unittest("TimeDfxTest") {
  module_out_path = module_output_path

  sources = [ "src/time_dfx_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "../../interfaces/inner_api:time_client",
    "../../services:time_service",
    "//third_party/googletest:gtest_main",
    "//third_party/jsoncpp:jsoncpp",
  ]

  external_deps = [
    "ability_base:want",
    "ability_runtime:runtime",
    "ability_runtime:wantagent_innerkits",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true

  deps = [ ":TimeDfxTest" ]
}