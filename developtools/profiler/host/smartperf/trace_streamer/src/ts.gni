  target = "trace_streamer"
  is_openharmony = true
  OHOS_FTRACE_PROTO_DIR = "//developtools/profiler/protos/types/plugins/ftrace_data/${kernel_version}"
  OHOS_MEMORY_PROTO_DIR =
      "//developtools/profiler/protos/types/plugins/memory_data"
