group("hdf_display_fuzztest") {
  testonly = true
  deps = []

  SOC_DISPLAY_PATH = rebase_path(
          "//device/soc/${device_company}/${product_name}/hardware/display")
  cmd = "if [ -f ${SOC_DISPLAY_PATH}/BUILD.gn ]; then echo true; else echo false; fi"
  SOC_DISPLAY_PATH_EXIST =
      exec_script("//build/lite/run_shell_cmd.py", [ cmd ], "value")

  if (SOC_DISPLAY_PATH_EXIST) {
    deps += [
      "displayallocmem_fuzzer:fuzztest",
      "displayissupportedalloc_fuzzer:fuzztest",
      "displaymmap_fuzzer:fuzztest",
    ]
  }
}
