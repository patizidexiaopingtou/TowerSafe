import("//build/ohos.gni")

LIGHT_ROOT_DIR = "//drivers/peripheral/light"

if (defined(ohos_lite)) {
  config("libhdi_light_pub_config") {
    visibility = [ ":*" ]
  }

  FWK_ROOT_DIR = "//drivers/hdf_core/framework"
  ohos_shared_library("hdi_light") {
    output_extension = "z.so"
    sources = [ "$LIGHT_ROOT_DIR/hal/src/light_controller.c" ]

    include_dirs = [
      "$LIGHT_ROOT_DIR/hal/include",
      "$LIGHT_ROOT_DIR/interfaces/include",
      "$FWK_ROOT_DIR/include",
      "$FWK_ROOT_DIR/include/utils",
      "$FWK_ROOT_DIR/include/osal",
      "$FWK_ROOT_DIR/include/core",
      "//third_party/bounds_checking_function/include",
    ]

    public_configs = [ ":libhdi_light_pub_config" ]
    deps = [
      "//base/hiviewdfx/hilog_lite/frameworks/featured:hilog_shared",
      "//third_party/bounds_checking_function:libsec_shared",
    ]
    external_deps = [ "hdf_core:libhdf_utils" ]

    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]
    install_images = [ chipset_base_dir ]
    subsystem_name = "hdf"
    part_name = "drivers_peripheral_light"
  }
} else {
  config("libhdi_light_pub_config") {
    visibility = [ ":*" ]
    include_dirs = [ "$LIGHT_ROOT_DIR/interfaces/include" ]
  }
  ohos_shared_library("hdi_light") {
    public_configs = [ ":libhdi_light_pub_config" ]
    sources = [ "$LIGHT_ROOT_DIR/hal/src/light_controller.c" ]

    include_dirs = [
      "$LIGHT_ROOT_DIR/hal/include",
      "//third_party/bounds_checking_function/include",
    ]

    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]
    install_images = [ chipset_base_dir ]
    subsystem_name = "hdf"
    part_name = "drivers_peripheral_light"
    if (is_standard_system) {
      external_deps = [
        "c_utils:utils",
        "hdf_core:libhdf_utils",
        "hiviewdfx_hilog_native:libhilog",
      ]
    } else {
      external_deps = [ "hilog:libhilog" ]
    }
  }
}
