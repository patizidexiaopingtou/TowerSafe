import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_light/light"

ohos_fuzztest("LightFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/peripheral/light/test/fuzztest/light_fuzzer"

  include_dirs = [ "//drivers/peripheral/light/test/fuzztest/light_fuzzer" ]

  sources = [ "light_fuzzer.cpp" ]

  deps = [
    "//drivers/interface/light/v1_0:liblight_stub_1.0",
    "//drivers/peripheral/light/hal:hdi_light",
  ]

  external_deps = [
    "c_utils:utils",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
  ]
}

group("hdf_fuzztest_light") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":LightFuzzTest",
  ]
}
