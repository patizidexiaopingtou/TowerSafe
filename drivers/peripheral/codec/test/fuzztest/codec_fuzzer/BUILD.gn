import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_codec/codec"

ohos_fuzztest("CodecFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/peripheral/codec/test/fuzztest/codec_fuzzer"

  include_dirs = [
    "//drivers/peripheral/codec/interfaces/include",
    "//drivers/peripheral/codec/hal/include",
    "//drivers/peripheral/codec/test/fuzztest/codec_fuzzer",
    "//third_party/openmax/api/1.1.2",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "codec_fuzzer.cpp" ]

  deps = [ "//drivers/peripheral/codec/hal:libcodec_hdi_omx_server" ]

  external_deps = [
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":CodecFuzzTest" ]
}
