import("//build/test.gni")
import("//drivers/hdf_core/adapter/uhdf2/uhdf.gni")

module_output_path = "drivers_peripheral_wlan/wlan"

ohos_fuzztest("WlanFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/peripheral/wlan/test/fuzztest/wlan_fuzzer"

  include_dirs = [
    "//drivers/peripheral/wlan/interfaces/include",
    "//drivers/peripheral/wlan/test/hdi_service",
  ]

  deps = [ "//drivers/peripheral/wlan/hdi_service:hdi_wlan_service" ]

  external_deps = [
    "drivers_interface_wlan:libwlan_proxy_1.0",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "wlan_fuzzer.cpp" ]
}

group("wlan_fuzztest") {
  testonly = true
  deps = [ ":WlanFuzzTest" ]
}
