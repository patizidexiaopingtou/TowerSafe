import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "hdf/input"

ohos_fuzztest("InputUnregisterReportCallbackFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "//drivers/peripheral/input/test/fuzztest/inputunregisterreportcallback_fuzzer"
  include_dirs = [
    "//drivers/peripheral/input/test/fuzztest/inputunregisterreportcallback_fuzzer",
    "//drivers/peripheral/input/interfaces/include",
  ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "inputunregisterreportcallback_fuzzer.cpp" ]
  deps = [ "//drivers/peripheral/input/hal:hdi_input" ]
  external_deps = [
    "c_utils:utils",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":InputUnregisterReportCallbackFuzzTest" ]
}
