module_output_path = "hdf/audio"

ohos_fuzztest("AudioInterfaceliboutputrenderCmdidFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "//drivers/peripheral/audio/test/fuzztest/adm_fuzzer/audiointerfaceliboutputrendercmdid_fuzzer"

  include_dirs = []
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [
    "../../common/src/audio_adm_fuzzer_common.cpp",
    "../../common/src/audio_hdi_fuzzer_common.cpp",
    "audiointerfaceliboutputrendercmdid_fuzzer.cpp",
  ]
  include_dirs = [
    "//drivers/peripheral/audio/supportlibs/adm_adapter/include",
    "//drivers/peripheral/audio/hal/hdi_passthrough/include",
    "//drivers/peripheral/audio/interfaces/include",
    "//third_party/bounds_checking_function/include",
    "//drivers/peripheral/audio/test/fuzztest/adm_fuzzer/audiointerfaceliboutputrendercmdid_fuzzer",
    "//drivers/peripheral/audio/test/fuzztest/common/include",
  ]
  external_deps = [
    "c_utils:utils",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
  ]
  defines = []
  if (enable_audio_adm_passthrough) {
    defines += [ "AUDIO_ADM_SO" ]
  }
  if (enable_audio_adm_service) {
    defines += [ "AUDIO_ADM_SERVICE" ]
  }
}
