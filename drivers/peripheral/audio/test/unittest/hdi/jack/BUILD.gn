if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")
  import("//drivers/peripheral/audio/audio.gni")
} else {
  import("//build/ohos.gni")
  import("//build/test.gni")
  import("//drivers/hdf_core/adapter/uhdf2/uhdf.gni")
  import("//drivers/peripheral/audio/audio.gni")
}

if (defined(ohos_lite)) {
  unittest("hdf_audio_hdi_headset_test") {
    sources = [ "//drivers/peripheral/audio/test/unittest/hdi/jack/src/analog_headset_test.cpp" ]

    include_dirs = [
      "//drivers/peripheral/audio/test/unittest/hdi/jack/include",
      "//base/hiviewdfx/hilog_lite/interfaces/native/innerkits",
      "//drivers/hdf_core/adapter/uhdf/posix/include",
      "//drivers/hdf_core/framework/include",
      "//drivers/hdf_core/framework/include/core",
      "//drivers/hdf_core/framework/include/osal",
      "//drivers/hdf_core/framework/include/platform",
      "//drivers/hdf_core/framework/include/utils",
      "//drivers/hdf_core/framework/utils/include",
      "//drivers/hdf_core/framework/test/unittest/include",
      "//drivers/peripheral/input/hal/include",
      "//drivers/peripheral/input/interfaces/include",
      "//third_party/bounds_checking_function/include",
      "//third_party/FreeBSD/sys/dev/evdev",
    ]

    deps = [
      "//base/hiviewdfx/hilog_lite/frameworks/featured:hilog_shared",
      "//drivers/hdf_core/adapter/uhdf/manager:hdf_core",
      "//drivers/hdf_core/adapter/uhdf/platform:hdf_platform",
      "//drivers/hdf_core/adapter/uhdf/posix:hdf_posix_osal",
      "//drivers/hdf_core/adapter/uhdf/test/unittest/common:hdf_test_common",
      "//drivers/peripheral/audio/hal/hdi_passthrough:hdi_audio",
      "//drivers/peripheral/input/hal:hdi_input",
    ]
    public_deps = [ "//third_party/bounds_checking_function:libsec_shared" ]
    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
      "-std=c++11",
    ]
    if (ohos_build_compiler != "clang") {
      cflags += [
        "-Wno-format",
        "-Wno-format-extra-args",
      ]
    }
  }
} else {
  module_output_path = "hdf/audio/hal"
  ohos_unittest("hdf_audio_hdi_headset_test") {
    module_out_path = module_output_path
    sources = [ "//drivers/peripheral/audio/test/unittest/hdi/jack/src/analog_headset_test.cpp" ]

    include_dirs =
        [ "//drivers/peripheral/audio/test/unittest/hdi/jack/include" ]

    deps = [
      "$hdf_uhdf_path/utils:libhdf_utils",
      "//drivers/hdf_core/adapter/build/test_common:libhdf_test_common",
      "//drivers/peripheral/audio/hal/hdi_passthrough:hdi_audio_common",
      "//drivers/peripheral/input/hal:hdi_input",
    ]
    if (!drivers_peripheral_audio_user_mode) {
      deps += [ "//drivers/peripheral/audio/hal/hdi_passthrough:hdi_audio" ]
    } else {
      deps += [ "//device/soc/${product_company}/common/hal/media:hdi_audio" ]
    }

    if (is_standard_system) {
      external_deps = [
        "c_utils:utils",
        "hdf_core:libhdf_utils",
        "hiviewdfx_hilog_native:libhilog",
      ]
    } else {
      external_deps = [
        "hdf_core:libhdf_utils",
        "hilog:libhilog",
      ]
    }
    cflags = [
      "-Wall",
      "-Wextra",
      "-Werror",
      "-fsigned-char",
      "-fno-common",
      "-fno-strict-aliasing",
    ]
  }
}
