import("//drivers/peripheral/audio/audio.gni")
if (defined(ohos_lite)) {
  import("//build/lite/config/test.gni")
} else {
  import("//build/test.gni")
  import("//drivers/hdf_core/adapter/uhdf2/uhdf.gni")
}

group("audiotest") {
  if (!defined(ohos_lite)) {
    testonly = true
  }
  deps = []

  # hal ut
  if (drivers_peripheral_audio_full_test_suite) {
    if (drivers_peripheral_audio_rich_device) {
      deps += [ "hdi/client_advance:hdi_client_advance" ]
    } else {
      deps += [
        "hdi/client:hdi_client",
        "hdi/passthrough:hdi_passthrough",
        "supportlibs:interface_lib",
      ]
    }
  }
}
