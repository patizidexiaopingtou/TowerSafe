import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "hdf/sensor"

ohos_fuzztest("SensorRegisterAndUnregisterCallbackFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/peripheral/sensor/test/fuzztest/sensorregisterandunregistercallback_fuzzer"

  include_dirs = [
    "//drivers/peripheral/sensor/test/fuzztest/sensorregisterandunregistercallback_fuzzer",
    "//drivers/peripheral/sensor/hdi_service",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "sensorregisterandunregistercallback_fuzzer.cpp" ]

  deps = [ "//drivers/peripheral/sensor/hal:hdi_sensor" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_sensor:libsensor_proxy_1.0",
    "hdf_core:libhdf_utils",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":SensorRegisterAndUnregisterCallbackFuzzTest",
  ]
}
