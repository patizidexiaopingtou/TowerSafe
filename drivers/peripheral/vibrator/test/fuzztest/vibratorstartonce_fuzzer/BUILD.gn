import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "hdf/vibrator"

ohos_fuzztest("VibratorStartOnceFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file =
      "//drivers/peripheral/vibrator/test/fuzztest/vibratorstartonce_fuzzer"
  include_dirs =
      [ "//drivers/peripheral/vibrator/test/fuzztest/vibratorstartonce_fuzzer" ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]
  sources = [ "vibratorstartonce_fuzzer.cpp" ]
  deps = [ "//drivers/peripheral/vibrator/hal:hdi_vibrator" ]
  external_deps = [
    "c_utils:utils",
    "drivers_interface_vibrator:libvibrator_proxy_1.1",
    "hdf_core:libhdf_utils",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":VibratorStartOnceFuzzTest" ]
}
