declare_args() {
  drivers_peripheral_vibrator_feature_model = false
}

if (defined(ohos_lite)) {
  import("//build/lite/config/component/lite_component.gni")
  import("//build/lite/config/test.gni")

  lite_component("hdf_test_vibrator") {
    # add hdf subsystem unittest
    if (ohos_build_type == "debug") {
      if (ohos_kernel_type == "linux" && board_name == "hispark_taurus") {
        deps = [ "unittest:hdf_peripheral_test_vibrator" ]
      } else if (ohos_kernel_type == "liteos_a" &&
                 board_name == "hispark_taurus") {
        deps = [ "unittest:hdf_peripheral_test_vibrator" ]
      }
    }
    features = []
  }
} else {
  import("//build/ohos.gni")

  group("hdf_test_vibrator") {
    deps = []
    if (drivers_peripheral_vibrator_feature_model) {
      testonly = true
      deps += [
        "benchmarktest:hdf_vibrator_benchmark_test",
        "fuzztest/vibrator_fuzzer:hdf_fuzztest_vibrator",
        "unittest/hdi:hdf_unittest_hdi_vibrator",
      ]
    }
  }
}
