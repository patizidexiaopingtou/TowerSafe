import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_usb/usb"

ohos_fuzztest("UsbSetConfigFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file =
      "//drivers/peripheral/usb/test/fuzztest/usbsetconfig_fuzzer"

  include_dirs = [
    "//drivers/peripheral/usb/test/fuzztest/usbsetconfig_fuzzer",
    "//drivers/peripheral/usb/test/UsbSubscriberTest",
    "//drivers/peripheral/usb/test/fuzztest/usbcommonfunction_fuzzer",
    "//drivers/hdf_core/framework/include/utils",
    "//base/usb/usb_manager/utils/native/include",
  ]

  deps = [ "//drivers/peripheral/usb/ddk:libusb_core" ]

  external_deps = [
    "c_utils:utils",
    "drivers_interface_usb:libusb_proxy_1.0",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [
    "//drivers/peripheral/usb/test/UsbSubscriberTest/UsbSubscriberTest.cpp",
    "//drivers/peripheral/usb/test/fuzztest/usbcommonfunction_fuzzer/usbcommonfunction_fuzzer.cpp",
    "usbsetconfig_fuzzer.cpp",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":UsbSetConfigFuzzTest" ]
}
