import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "drivers_peripheral_motion/motion"

ohos_fuzztest("MotionFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/peripheral/motion/test/fuzztest/motion_fuzzer"

  include_dirs = [
    "//drivers/peripheral/motion/test/fuzztest/motion_fuzzer",
    "//drivers/peripheral/motion/hdi_service",
  ]

  sources = [ "motion_fuzzer.cpp" ]

  deps = [ "//drivers/interface/motion/v1_0:libmotion_stub_1.0" ]

  external_deps = [
    "c_utils:utils",
    "hdf_core:libhdf_utils",
    "hdf_core:libhdi",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
  ]
}

group("hdf_fuzztest_motion") {
  testonly = true
  deps = []
  deps += [ ":MotionFuzzTest" ]
}
