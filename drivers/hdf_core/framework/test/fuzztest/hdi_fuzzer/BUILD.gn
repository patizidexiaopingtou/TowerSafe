import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
module_output_path = "hdf_core/hdi"

ohos_fuzztest("HdiFuzzTest") {
  module_out_path = module_output_path

  fuzz_config_file = "//drivers/hdf_core/framework/test/fuzztest/hdi_fuzzer"

  include_dirs = [ "//drivers/hdf_core/adapter/uhdf2/hdi/include/hdi" ]

  sources = [ "hdi_fuzzer.cpp" ]

  deps = [
    "//drivers/hdf_core/adapter/uhdf2/hdi:libhdi",
    "//drivers/hdf_core/adapter/uhdf2/ipc:libhdf_ipc_adapter",
    "//drivers/hdf_core/adapter/uhdf2/utils:libhdf_utils",
  ]

  external_deps = [
    "c_utils:utils",
    "hdf_core:libhdf_utils",
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_single",
  ]
}

group("fuzztest") {
  testonly = true
  deps = []
  deps += [ ":HdiFuzzTest" ]
}
